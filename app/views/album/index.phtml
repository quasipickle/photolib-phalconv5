<div class="album">
    <div class="album__sidebar">
            <div class="p-2">
                <div class="input-group">
                    {# required is needed to be able to target with css.  See _sidebar.scss #}
                    <input type="text" class="form-control" required id="sidebar-search"/>
                    <button class="btn btn-outline-input lh-1" id="sidebar-search-clear">
                        {{ viewHelper.icon("bi-x-lg") }}
                    </button>
                </div>
            </div>
        <div class = "list-group list-group-flush list-group--sm sidebar__list-group">
            {% for album in menuAlbums %}
                <a class = "list-group-item list-group-item-action {% if Album.id == album.id %}active{% endif %} sidebar__list-item" 
                   data-album-name = "{{ album.name|escape_attr }}"
                   href="{{ viewHelper.albumUrl(album.id) }}">
                    {{ album.name }}
                </a>
            {% endfor %}
        </div>
    </div>
    <div class="album__main">
        {#
            Breadcrumbs
        #}
        <nav aria-label="breadcrumb" class="album__breadcrumb">
            <ol class="breadcrumb">
                {% for crumb in breadcrumbs %}
                    {% set active = loop.last ? "active" : "" %}
                    <li class="breadcrumb-item {{ active }}">
                        {% if !loop.last %}
                            <a href="{{ viewHelper.albumUrl(crumb.id) }}">
                        {% endif %}
                        {% if loop.first %}{{ viewHelper.icon("bi-house-fill me-1") }}{% endif %}{{ crumb.name }}
                        {% if !loop.last %}
                            </a>
                        {% endif %}
                    </li>
                {% endfor %}
            </ol>
        </nav>

        {#
            Grid
        #}
        <div class="album__grid-container">
            <div class="album__grid">
                {#
                    Albums
                #}
                {% for album in Album.albums %}
                    <div class="grid__item">
                        <a class="grid__album" href="{{ viewHelper.albumUrl(album.id) }}">
                            {% if album.Featured != null %}
                                <img src = "{{ viewHelper.photoUrl(album.Featured.thumb_path) }}" loading="lazy" />
                            {% endif %}
                            <div class="grid__caption">
                                {{ album.name }}
                            </div>
                        </a>
                    </div>
                {% endfor %}

                {#
                    Photos
                #}
                {% for photo in Album.photos %}
                    <div class="grid__item">
                        <div class="grid__photo">
                            {# This must be an <a> to enable the exclusive effect.  See BS docs #}
                            <a class="btn btn-grid-popup grid__info" 
                                tabindex="0"
                                data-bs-toggle="popover"
                                data-bs-html="true"
                                data-bs-title="{{ photo.original_filename }}" 
                                data-width="{{ photo.width }}"
                                data-height="{{ photo.height }}"
                                data-filesize="{{ filesize(photo.filesize) }}"
                                data-battles="{{ photo.battles }}"
                                data-win-percentage="{{ photo.winPercentage() }}"
                                data-content="Content failed to load."
                            >
                                {{ viewHelper.icon("bi-info-circle") }}
                            </a>
                            <button class="btn btn-grid-popup grid__tools">
                                {{ viewHelper.icon("bi-three-dots-vertical") }}
                            </button>
                            <img class="lightboxable"
                                 loading="lazy"
                                 src = "{{ viewHelper.photoUrl(photo.thumb_path) }}" 
                                 data-src = "{{ viewHelper.photoUrl(photo.display_path) }}" 
                                 data-width = "{{ photo.width }}"
                                 data-height = "{{ photo.height }}"
                                 data-filesize = "{{ photo.filesize }}"
                                 data-original-src = "{{ photo.path }}"
                            />
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
<div class = "lightbox" 
    x-data="lightbox" 
    x-on:lightboxable-clicked.window="box($event.detail)" 
    :class="show ? 'lightbox--show' : ''" 
    [x-cloak]>
    <div class="lightbox__current" @click="show=false">
        <img class="lightbox__img" :src="photo?.dataset.src ?? ''"/>
    </div>
    <div class = "lightbox__previous" @click="box(previous)" x-show="previous != null">
        <img class="lightbox__img--previous" :src="previous?.dataset.src"/>
    </div>
    <div class = "lightbox__next" @click="box(next)" x-show="next != null">
        <img class="lightbox__img--next" :src="next?.dataset.src"/>
    </div>
    <div  class = "lightbox__details">
        <span class = "lightbox__detail" x-text="`${photo?.dataset.width} x ${photo?.dataset.height}`"></span>
        <span class = "lightbox__detail" x-text="`${Math.floor((photo?.dataset.filesize ?? 0) /1000)}KB`"></span>
        <a class = "lightbox__detail btn btn-sm btn-outline-light" :href = "`{{ config.dirs.web.photo }}` + photo?.dataset.originalSrc" target = "_blank">Original {{ viewHelper.icon("bi-box-arrow-up-right") }}</a>
    </div>
</div>

<script type="text/javascript">
document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll(".grid__info").forEach($el =>  new bootstrap.Popover($el, {
        sanitize: false,
        content: popover,
        customClass: "grid__popover",
        trigger:"focus",
    }));
});

function popover()
{
    const battlesInt = parseInt(this.dataset.battles);
    let winPercentageInt = parseInt(this.dataset.winPercentage);
    winPercentageInt = isNaN(winPercentageInt) ? 0 : winPercentageInt;
    const lossPercentageInt = 100 - winPercentageInt;

    let info = `
        ${this.dataset.width} &times; ${this.dataset.height }<br />
        ${this.dataset.filesize}<br />
        <div class="d-flex gap-1 align-items-center">
            {{ icon("bi-bar-chart") }}          
    `;
    if (battlesInt > 0) {
        info += `
            <div class="progress flex-grow-1">
                <div class="progress flex-grow-1">
                    <div class="progress-bar bg-success" role="progressbar" aria-label="wins" style="width: ${winPercentageInt}%" aria-valuenow="${winPercentageInt}" aria-valuemin="0" aria-valuemax="100"></div>
                    <div class="progress-bar bg-danger" role="progressbar" aria-label="losses" style="width: ${lossPercentageInt}%" aria-valuenow="${lossPercentageInt}" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
            <div class="text-nowrap">
                ${winPercentageInt}% / ${battlesInt}
            </div>
        `;
    } else {
        info += "-";
    }
    info += "</div>";

    return info;
}
</script>


